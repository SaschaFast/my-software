{
    "name": "Saschas Theme",
    "style": "Light",
    "author": [
        {
            "name": "Sascha",
            "comment": "Began as: Pretty Functional by Basil"
        }
    ],
    "version": "1.0",

    "editor": {
        "backgroundColor": "#fafafa",
        "caretColor": "#0d99fc",
        "highlight": {
            "backgroundColor": "#b2d7ff",
            "unfocusedBackgroundColor": "#d7e7f4"
        }
    },
    
    "savedSearchesSidebar": {
        "color": "#fafafa",
        "border": true,
        "backgroundColor": "#0d66a5",
        "highlightedBackgroundColor": "#2b5bee",
        "iconColors": {
            "default": "#fafafa"
        }
    },

    "resultsList": {
        "color": "#414141",
        "backgroundColor": "#fafafa",
        "alternateBackgroundColor": "#ededed",
        "selection": {
            "color": "#fafafa",
            "backgroundColor": "#2b5bee",
            "unfocusedColor": "#fafafa",
            "unfocusedBackgroundColor": "#0d66a5"
        },
        "border": true
    },

    "styles": {
        "base": {
            "color": "#414141"
        },

        "h1": {
            "font": { "style": "bold" },
            "color": "#b0251e"
        },
        "h2": {
            "font": {  "style": "bold" },
            "color": "#bb332e"
        },
        "h3": {
            "font": {  "style": "bold" },
            "color": "#b23d39"
        },
        "h4": {
            "font": {  "style": "bold" },
            "color": "#a94745"
        },
        "h5": {
            "font": {  "style": "bold" },
            "color": "#a94745"
        },
        "h6": {
            "font": {  "style": "bold" },
            "color": "#a94745"
        },
        
        "horizontalRule": {
            "color": "#737373"
        },

        "codeBlock": {
            "font": { "name": "Menlo", "size": 16 },
            "color": "#54656a",
            "backgroundColor": "#f5f5f5"
        },
        "inlineCode": {
            "font": { "name": "Menlo", "size": 18 },
            "color": "#54656a",
            "backgroundColor": "#f5f5f5"
        },
        "blockquote": {
            "color": "#826a3b",
            "backgroundColor": "#f5f5f5"
        },
        "list": {
            "syntax": { "color" : "#414141" }
        },

        "emphasis": {
            "font": {  "style": "italic" }
        },
        "strong": {
            "font": {  "style": "bold" }
        },

        "image": {
            "color": "#737373"
        },
        "link": {
            "color": "#3266ca"
        },
        "referenceDefinition": {
            "color": "#737373"
        },

        "comment": {
            "color": "#9c7575",
            "font": { "name": "Menlo", "size": 18 },
        },
        
        "footnote": {
            "color": "#057a7a"
        }
    }
}
